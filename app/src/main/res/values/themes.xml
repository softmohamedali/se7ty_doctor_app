<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Doctors_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/button_stroke</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomBottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav</item>
        <item name="itemTextColor">@color/bottom_nav</item>
    </style>

    <style name="CustomOutLineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/button_stroke</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/button_stroke</item>
    </style>

    <style name="CustomText_1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="CustomText_2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="CustomText_3" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomText_4" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_23sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>